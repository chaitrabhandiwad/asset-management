<%- include('../partials/header') %>
<section class="section narrow">
  <h1>Add Car</h1>
  <% if (error) { %>
    <div class="alert"><%= error %></div>
  <% } %>
  <form method="post" action="/cars" class="form">
    <label>VIN
      <input name="vin" required />
    </label>
    <label>Plate
      <input name="plate" required />
    </label>
    <label>Make
      <input name="make" required />
    </label>
    <label>Model
      <input name="model" required />
    </label>
    <label>Year
      <input name="year" type="number" min="1980" max="2100" required />
    </label>
    <label>Location
      <input name="location" />
    </label>
    <label>Notes
      <textarea name="notes"></textarea>
    </label>
    <button type="submit">Save</button>
  </form>
</section>
<%- include('../partials/footer') %>
