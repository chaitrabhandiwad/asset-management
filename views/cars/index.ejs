<%- include('../partials/header') %>
<section class="section">
  <div class="section-header">
    <h1>Cars</h1>
    <% if (['admin','manager'].includes(currentUser.role)) { %>
      <a class="button" href="/cars/new">Add Car</a>
    <% } %>
  </div>
  <table>
    <thead>
      <tr>
        <th>Plate</th>
        <th>Vehicle</th>
        <th>Status</th>
        <th>Driver</th>
        <th>Location</th>
      </tr>
    </thead>
    <tbody>
      <% if (cars.length === 0) { %>
        <tr><td colspan="5" class="muted">No cars yet</td></tr>
      <% } %>
      <% cars.forEach(car => { %>
        <tr>
          <td><a href="/cars/<%= car.id %>"><%= car.plate %></a></td>
          <td><%= car.year %> <%= car.make %> <%= car.model %></td>
          <td><span class="pill <%= car.status %>"><%= car.status %></span></td>
          <td><%= car.driver || '-' %></td>
          <td><%= car.location || '-' %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</section>
<%- include('../partials/footer') %>
