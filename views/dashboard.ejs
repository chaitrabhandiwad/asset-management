<%- include('partials/header') %>
<section class="grid">
  <div class="card">
    <h2>Total Cars</h2>
    <div class="metric"><%= counts.cars %></div>
  </div>
  <div class="card">
    <h2>Active Assignments</h2>
    <div class="metric"><%= counts.assignments %></div>
  </div>
  <div class="card">
    <h2>Maintenance Records</h2>
    <div class="metric"><%= counts.maintenance %></div>
  </div>
</section>

<section class="section">
  <div class="section-header">
    <h3>Active Assignments</h3>
    <a class="button" href="/assignments/new">New Assignment</a>
  </div>
  <table>
    <thead>
      <tr>
        <th>Driver</th>
        <th>Car</th>
        <th>Start</th>
        <th>Purpose</th>
      </tr>
    </thead>
    <tbody>
      <% if (activeAssignments.length === 0) { %>
        <tr><td colspan="4" class="muted">No active assignments</td></tr>
      <% } %>
      <% activeAssignments.forEach(a => { %>
        <tr>
          <td><%= a.driver %></td>
          <td><%= a.plate %> - <%= a.make %> <%= a.model %></td>
          <td><%= a.start_date %></td>
          <td><%= a.purpose || '-' %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</section>
<%- include('partials/footer') %>
